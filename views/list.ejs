<%- include("header") %> 


    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <!-- Print the updated version for each home route redirection after post request -->
        <% newListItems.forEach((item) => {   %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p><%= item.name %> </p>
                    <input type="hidden" name="listName" value="<%= listTitle %>">
                </div>
            </form>
        <% })  %>

        <form id="form" action="/" method="post">
            <input id="Item" type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button class="submit-btn" type="submit" name="list" value= <%= listTitle %> >+</button>
        </form>
    </div>

<%- include("footer") %>